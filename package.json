{
  "name": "sport-tracker-site",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "prebuild": "npm run generate:seo",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 60",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "preview": "vite preview",
    "generate:seo": "node scripts/generate-seo-files.cjs",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "lighthouse": "lhci autorun",
    "lighthouse:server": "lhci server --port=9001",
    "ci:quality": "npm run type-check && npm run lint && npm run format:check && npm run test:coverage",
    "ci:build": "npm run build && npm run build:analyze",
    "deploy:test": "node scripts/deploy-test.js",
    "deploy:verify": "node scripts/verify-deployment.js",
    "deploy:verify:staging": "node scripts/verify-deployment.js staging",
    "monitor:setup": "node scripts/setup-monitoring.js",
    "monitor:uptime": "node scripts/uptime-monitor.js --check-once",
    "monitor:performance": "node scripts/performance-monitor.js",
    "monitor:security": "node scripts/security-monitor.js",
    "monitor:errors": "node scripts/error-monitor.js",
    "monitor:dashboard": "node scripts/monitoring-dashboard.js",
    "monitor:all": "npm run monitor:uptime && npm run monitor:performance && npm run monitor:security && npm run monitor:errors",
    "verify:links": "node scripts/verify-external-links.js",
    "verify:contact": "node scripts/test-contact-forms.js",
    "audit:security": "node scripts/security-audit.js",
    "launch:checklist": "npm run verify:links && npm run verify:contact && npm run audit:security && npm run deploy:verify"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@testing-library/dom": "^10.4.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^15.7.3",
    "react-intersection-observer": "^9.16.0",
    "react-router-dom": "^7.9.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@lhci/cli": "^0.12.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "chalk": "^5.3.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-svgo": "^11.0.1",
    "jsdom": "^27.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "terser": "^5.44.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-bundle-analyzer": "^0.18.0",
    "vitest": "^3.2.4"
  }
}
